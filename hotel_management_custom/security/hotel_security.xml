<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Catégorie principale -->
        <record id="module_category_hotel_management" model="ir.module.category">
            <field name="name">Gestion Hôtelière</field>
            <field name="description">Gestion complète d'hôtel</field>
            <field name="sequence">20</field>
        </record>

        <!-- Groupe: Réceptionniste -->
        <record id="group_hotel_receptionist" model="res.groups">
            <field name="name">Réceptionniste</field>
            <field name="category_id" ref="module_category_hotel_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Peut gérer les réservations, check-in/out</field>
        </record>

        <!-- Groupe: Gouvernante -->
        <record id="group_hotel_housekeeper" model="res.groups">
            <field name="name">Gouvernante</field>
            <field name="category_id" ref="module_category_hotel_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Peut gérer le nettoyage et la maintenance des chambres</field>
        </record>

        <!-- Groupe: Gestionnaire Stock -->
        <record id="group_hotel_stock_manager" model="res.groups">
            <field name="name">Gestionnaire Stock</field>
            <field name="category_id" ref="module_category_hotel_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Peut gérer le stock et les produits</field>
        </record>

        <!-- Groupe: Comptable -->
        <record id="group_hotel_accountant" model="res.groups">
            <field name="name">Comptable Hôtel</field>
            <field name="category_id" ref="module_category_hotel_management"/>
            <field name="implied_ids" eval="[(4, ref('account.group_account_invoice'))]"/>
            <field name="comment">Peut gérer la facturation et les paiements</field>
        </record>

        <!-- Groupe: Manager -->
        <record id="group_hotel_manager" model="res.groups">
            <field name="name">Manager Hôtel</field>
            <field name="category_id" ref="module_category_hotel_management"/>
            <field name="implied_ids" eval="[(4, ref('group_hotel_receptionist')), 
                                            (4, ref('group_hotel_housekeeper')), 
                                            (4, ref('group_hotel_stock_manager')), 
                                            (4, ref('group_hotel_accountant'))]"/>
            <field name="comment">Accès complet à tous les modules hôteliers</field>
        </record>

    </data>
</odoo>
