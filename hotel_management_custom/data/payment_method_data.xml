<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Mode de paiement: Espèces -->
        <record id="payment_method_cash" model="hotel.payment.method">
            <field name="name">Espèces</field>
            <field name="code">CASH</field>
            <field name="payment_type">cash</field>
            <field name="sequence">10</field>
        </record>

        <!-- Mode de paiement: Carte Bancaire -->
        <record id="payment_method_card" model="hotel.payment.method">
            <field name="name">Carte Bancaire</field>
            <field name="code">CARD</field>
            <field name="payment_type">bank_card</field>
            <field name="require_reference">True</field>
            <field name="sequence">20</field>
        </record>

        <!-- Mode de paiement: Chèque -->
        <record id="payment_method_check" model="hotel.payment.method">
            <field name="name">Chèque</field>
            <field name="code">CHECK</field>
            <field name="payment_type">check</field>
            <field name="require_reference">True</field>
            <field name="sequence">30</field>
        </record>

        <!-- Mode de paiement: Wave CI -->
        <record id="payment_method_wave" model="hotel.payment.method">
            <field name="name">Wave CI</field>
            <field name="code">WAVE_CI</field>
            <field name="payment_type">mobile_money</field>
            <field name="mobile_provider">wave_ci</field>
            <field name="require_reference">True</field>
            <field name="require_phone">True</field>
            <field name="sequence">40</field>
        </record>

        <!-- Mode de paiement: Orange Money -->
        <record id="payment_method_orange" model="hotel.payment.method">
            <field name="name">Orange Money</field>
            <field name="code">ORANGE_MONEY</field>
            <field name="payment_type">mobile_money</field>
            <field name="mobile_provider">orange_money</field>
            <field name="require_reference">True</field>
            <field name="require_phone">True</field>
            <field name="sequence">50</field>
        </record>

        <!-- Mode de paiement: Moov Money -->
        <record id="payment_method_moov" model="hotel.payment.method">
            <field name="name">Moov Money</field>
            <field name="code">MOOV_MONEY</field>
            <field name="payment_type">mobile_money</field>
            <field name="mobile_provider">moov_money</field>
            <field name="require_reference">True</field>
            <field name="require_phone">True</field>
            <field name="sequence">60</field>
        </record>

        <!-- Mode de paiement: MTN Money -->
        <record id="payment_method_mtn" model="hotel.payment.method">
            <field name="name">MTN Money</field>
            <field name="code">MTN_MONEY</field>
            <field name="payment_type">mobile_money</field>
            <field name="mobile_provider">mtn_money</field>
            <field name="require_reference">True</field>
            <field name="require_phone">True</field>
            <field name="sequence">70</field>
        </record>

        <!-- Mode de paiement: Virement Bancaire -->
        <record id="payment_method_transfer" model="hotel.payment.method">
            <field name="name">Virement Bancaire</field>
            <field name="code">TRANSFER</field>
            <field name="payment_type">bank_transfer</field>
            <field name="require_reference">True</field>
            <field name="sequence">80</field>
        </record>

    </data>
</odoo>
