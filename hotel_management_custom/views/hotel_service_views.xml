<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vue Liste Services -->
    <record id="view_hotel_service_list" model="ir.ui.view">
        <field name="name">hotel.service.list</field>
        <field name="model">hotel.service</field>
        <field name="arch" type="xml">
            <list string="Services">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="category" widget="badge"/>
                <field name="price" widget="monetary"/>
                <field name="available_24h" widget="boolean_toggle"/>
                <field name="usage_count"/>
                <field name="active" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Vue Formulaire Services -->
    <record id="view_hotel_service_form" model="ir.ui.view">
        <field name="name">hotel.service.form</field>
        <field name="model">hotel.service</field>
        <field name="arch" type="xml">
            <form string="Service">
                <sheet>
                    <widget name="web_ribbon" title="Archivé" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_usage" type="object" 
                                class="oe_stat_button" icon="fa-line-chart">
                            <field name="usage_count" widget="statinfo" string="Utilisations"/>
                        </button>
                    </div>
                    
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="category"/>
                            <field name="price" widget="monetary"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="product_id" options="{'no_create': True}"/>
                            <field name="available_24h"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    
                    <group string="Description">
                        <field name="description" placeholder="Description du service..." nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Kanban Services -->
    <record id="view_hotel_service_kanban" model="ir.ui.view">
        <field name="name">hotel.service.kanban</field>
        <field name="model">hotel.service</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <templates>
                    <t t-name="card">
                        <div>
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    <br/>
                                    <span class="badge text-bg-info"><field name="category"/></span>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="price" widget="monetary"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <span t-if="record.available_24h.raw_value" class="badge text-bg-success">
                                    <i class="fa fa-clock"/> 24h/24
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Recherche Services -->
    <record id="view_hotel_service_search" model="ir.ui.view">
        <field name="name">hotel.service.search</field>
        <field name="model">hotel.service</field>
        <field name="arch" type="xml">
            <search string="Services">
                <field name="name"/>
                <field name="category"/>
                <separator/>
                <filter string="24h/24" name="available_24h" domain="[('available_24h', '=', True)]"/>
                <filter string="Actifs" name="active" domain="[('active', '=', True)]"/>
                <group expand="0" string="Grouper Par">
                    <filter string="Catégorie" name="group_category" context="{'group_by': 'category'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action Services -->
    <record id="action_hotel_service" model="ir.actions.act_window">
        <field name="name">Services</field>
        <field name="res_model">hotel.service</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau service
            </p>
            <p>
                Définissez les services disponibles pour vos clients.
            </p>
        </field>
    </record>

</odoo>
