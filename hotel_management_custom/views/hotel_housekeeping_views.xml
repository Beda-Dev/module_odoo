<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vue Liste Nettoyage -->
    <record id="view_hotel_housekeeping_list" model="ir.ui.view">
        <field name="name">hotel.housekeeping.list</field>
        <field name="model">hotel.housekeeping</field>
        <field name="arch" type="xml">
            <list string="Nettoyage" decoration-info="state == 'pending'" 
                  decoration-warning="state == 'in_progress'" 
                  decoration-success="state == 'completed'">
                <field name="name"/>
                <field name="room_id"/>
                <field name="room_status" widget="badge"/>
                <field name="cleaning_type" widget="badge"/>
                <field name="date"/>
                <field name="employee_id"/>
                <field name="duration" widget="float_time"/>
                <field name="state" widget="badge"/>
                <field name="inspected" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Vue Formulaire Nettoyage -->
    <record id="view_hotel_housekeeping_form" model="ir.ui.view">
        <field name="name">hotel.housekeeping.form</field>
        <field name="model">hotel.housekeeping</field>
        <field name="arch" type="xml">
            <form string="Nettoyage">
                <header>
                    <button name="action_start" string="Démarrer" type="object" 
                            class="btn-primary" invisible="state != 'pending'"/>
                    <button name="action_complete" string="Terminer" type="object" 
                            class="btn-success" invisible="state != 'in_progress'"/>
                    <button name="action_inspect" string="Inspecter" type="object" 
                            class="btn-info" invisible="state != 'completed' or inspected or not inspection_required"/>
                    <button name="action_cancel" string="Annuler" type="object" 
                            class="btn-danger" invisible="state == 'completed'"/>
                    <button name="action_add_product" string="Ajouter Produit" type="object" 
                            class="btn-secondary" invisible="state != 'in_progress'"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="pending,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="room_id" readonly="state != 'pending'"/>
                            <field name="room_status" readonly="1"/>
                            <field name="cleaning_type"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="employee_id"/>
                            <field name="start_time" readonly="1"/>
                            <field name="end_time" readonly="1"/>
                            <field name="duration" widget="float_time" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="Inspection" invisible="not inspection_required">
                        <group>
                            <field name="inspection_required"/>
                            <field name="inspected" readonly="1"/>
                            <field name="inspected_by" readonly="1" invisible="not inspected"/>
                            <field name="inspection_date" readonly="1" invisible="not inspected"/>
                        </group>
                        <group>
                            <field name="quality_rating"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Produits Utilisés" name="products">
                            <field name="product_line_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="uom_id" readonly="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <group>
                                <field name="notes" placeholder="Notes..."/>
                                <field name="issues_found" placeholder="Problèmes constatés..."/>
                                <field name="inspection_notes" placeholder="Notes d'inspection..." 
                                       invisible="not inspected"/>
                            </group>
                        </page>
                        <page string="Photos" name="photos">
                            <group>
                                <field name="image_before" widget="image" class="oe_avatar"/>
                                <field name="image_after" widget="image" class="oe_avatar"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Vue Kanban Nettoyage -->
    <record id="view_hotel_housekeeping_kanban" model="ir.ui.view">
        <field name="name">hotel.housekeeping.kanban</field>
        <field name="model">hotel.housekeeping</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="color"/>
                <templates>
                    <t t-name="card">
                        <div t-attf-class="oe_kanban_color_#{kanban_color(record.color.raw_value)}">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        Chambre <field name="room_id"/>
                                    </strong>
                                    <br/>
                                    <span class="badge text-bg-info"><field name="cleaning_type"/></span>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="date"/>
                                <br/>
                                <i class="fa fa-user"/> <field name="employee_id"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <span t-if="record.inspected.raw_value" class="badge text-bg-success">
                                    <i class="fa fa-check"/> Inspecté
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Calendrier Nettoyage -->
    <record id="view_hotel_housekeeping_calendar" model="ir.ui.view">
        <field name="name">hotel.housekeeping.calendar</field>
        <field name="model">hotel.housekeeping</field>
        <field name="arch" type="xml">
            <calendar string="Nettoyage" date_start="date" color="employee_id" mode="week">
                <field name="room_id"/>
                <field name="cleaning_type"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Vue Recherche Nettoyage -->
    <record id="view_hotel_housekeeping_search" model="ir.ui.view">
        <field name="name">hotel.housekeeping.search</field>
        <field name="model">hotel.housekeeping</field>
        <field name="arch" type="xml">
            <search string="Nettoyage">
                <field name="name"/>
                <field name="room_id"/>
                <field name="employee_id"/>
                <separator/>
                <filter string="En Attente" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="En Cours" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Terminé" name="completed" domain="[('state', '=', 'completed')]"/>
                <separator/>
                <filter string="À Inspecter" name="to_inspect" 
                        domain="[('state', '=', 'completed'), ('inspection_required', '=', True), ('inspected', '=', False)]"/>
                <filter string="Aujourd'hui" name="today" domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Grouper Par">
                    <filter string="Chambre" name="group_room" context="{'group_by': 'room_id'}"/>
                    <filter string="Employé" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Type" name="group_type" context="{'group_by': 'cleaning_type'}"/>
                    <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action Nettoyage -->
    <record id="action_hotel_housekeeping" model="ir.actions.act_window">
        <field name="name">Nettoyage</field>
        <field name="res_model">hotel.housekeeping</field>
        <field name="view_mode">list,kanban,form,calendar</field>
        <field name="context">{'search_default_pending': 1, 'search_default_in_progress': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucune tâche de nettoyage
            </p>
            <p>
                Les tâches de nettoyage sont créées automatiquement après le check-out.
            </p>
        </field>
    </record>

</odoo>
