<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vue Liste Réservations -->
    <record id="view_hotel_reservation_list" model="ir.ui.view">
        <field name="name">hotel.reservation.list</field>
        <field name="model">hotel.reservation</field>
        <field name="arch" type="xml">
            <list string="Réservations"
                  decoration-success="state == 'confirmed'"
                  decoration-info="state == 'checkin'"
                  decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="room_id"/>
                <field name="checkin_date"/>
                <field name="checkout_date"/>
                <field name="duration_days"/>
                <field name="total_amount" widget="monetary" sum="Total"/>
                <field name="payment_status" widget="badge"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'checkout'"
                       decoration-info="state == 'checkin'"
                       decoration-warning="state == 'confirmed'"
                       decoration-muted="state == 'cancelled'"/>
            </list>
        </field>
    </record>

    <!-- Vue Formulaire Réservations -->
    <record id="view_hotel_reservation_form" model="ir.ui.view">
        <field name="name">hotel.reservation.form</field>
        <field name="model">hotel.reservation</field>
        <field name="arch" type="xml">
            <form string="Réservation">
                <header>
                    <button name="action_generate_proforma" string="Générer Devis" type="object"
                            class="btn-primary" invisible="state not in ['draft', 'confirmed']"/>
                    <button name="action_record_advance_payment" string="Enregistrer Paiement" type="object"
                            class="btn-success" icon="fa-money" invisible="state not in ['draft', 'confirmed']"/>
                    <button name="action_confirm" string="Confirmer" type="object"
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_checkin" string="Check-in" type="object"
                            class="btn-success" invisible="state != 'confirmed'"/>
                    <button name="action_checkout" string="Check-out" type="object"
                            class="btn-info" invisible="state != 'checkin'"/>
                    <button name="action_cancel" string="Annuler" type="object"
                            class="btn-danger" invisible="state in ['cancelled', 'checkout']"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirmed,checkin,checkout"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Montant dû -->
                        <button name="action_register_advance_payment" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-money"
                                invisible="state in ['cancelled', 'checkout']"
                                context="{'default_reservation_id': id}">
                            <span class="oe_stat_text">Montant dû </span>    
                            <field name="amount_due" widget="monetary" class="oe_stat_value"/>
                            
                        </button>
                        
                        <!-- Acompte payé - Visible uniquement si acompte activé -->
                        <button name="action_request_deposit" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-credit-card"
                                invisible="not require_deposit or state in ['cancelled', 'checkout']">
                            <span class="oe_stat_text">Acompte payé </span>
                            <field name="deposit_paid" widget="monetary" class="oe_stat_value"/>
                            
                        </button>
                        
                        <!-- Factures -->
                        <button name="action_view_invoices" type="object"
                                class="oe_stat_button" icon="fa-file-invoice"
                                invisible="not invoice_ids">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Factures</span>
                                <span class="o_stat_value">
                                    <field name="invoice_ids" widget="statinfo" string="Factures"/>
                                </span>
                            </div>
                        </button>
                        
                        <!-- Devis / Pro-Forma -->
                        <button name="action_view_proforma" type="object"
                                class="oe_stat_button" icon="fa-file-text-o"
                                invisible="not proforma_invoice_ids">
                            <field name="proforma_count" widget="statinfo" string="Devis"/>
                        </button>
                        
                        <!-- Folio -->
                        <button name="action_view_folio" type="object"
                                class="oe_stat_button" icon="fa-file-text"
                                invisible="not folio_id">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Voir Folio</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="partner_id" options="{'no_create_edit': True}"/>
                            <field name="partner_phone" readonly="1"/>
                            <field name="partner_email" readonly="1"/>
                            <field name="booking_channel"/>
                        </group>
                        <group>
                            <field name="room_id" domain="[('status', 'in', ['available', 'reserved'])]"
                                   options="{'no_create': True}"/>
                            <field name="room_type_id" readonly="1"/>
                            <field name="hotel_payment_method_id" options="{'no_create': True}"/>
                        </group>
                    </group>

                    <group>
                        <group string="Dates">
                            <field name="checkin_date"/>
                            <field name="checkout_date"/>
                            <field name="duration_days" readonly="1"/>
                            <field name="actual_checkin_date" readonly="1"
                                   invisible="not actual_checkin_date"/>
                            <field name="actual_checkout_date" readonly="1"
                                   invisible="not actual_checkout_date"/>
                        </group>
                        <group string="Personnes">
                            <field name="adults"/>
                            <field name="children"/>
                            <field name="total_persons" readonly="1"/>
                        </group>
                    </group>

                    <group>
                        <group string="Montants" invisible="state == 'cancelled'">
                            <field name="total_amount" widget="monetary" readonly="1"/>
                            <field name="amount_paid" widget="monetary" readonly="1"/>
                            <field name="amount_due" widget="monetary" readonly="1" class="oe_subtotal_footer_separator"/>
                            <field name="payment_status" widget="badge"/>
                        </group>
                        <group string="Configuration">
                            <!-- Champs invisibles pour stockage -->
                            <field name="require_deposit" invisible="1"/>
                            <field name="deposit_amount" invisible="1"/>
                            <field name="deposit_paid" invisible="1"/>
                            <field name="allow_full_prepayment" invisible="1"/>
                            <field name="deposit_percentage" invisible="1"/>
                            
                            <field name="color" widget="color_picker"/>
                        </group>
                    </group>

                    <!-- Section Acompte visible uniquement si activé -->
                    <group string="Gestion Acompte" 
                           invisible="not require_deposit or state in ['cancelled', 'checkout']">
                        <group>
                            <label for="deposit_amount" string="Acompte requis"/>
                            <div class="o_row">
                                <field name="deposit_amount" widget="monetary" class="oe_inline"/>
                                <span class="oe_inline" invisible="not deposit_percentage">
                                    (<field name="deposit_percentage" class="oe_inline"/>%)
                                </span>
                            </div>
                            <field name="deposit_paid" widget="monetary" readonly="1"/>
                            <field name="advance_payment_status" widget="badge"
                                   decoration-danger="advance_payment_status == 'none'"
                                   decoration-warning="advance_payment_status == 'partial'"
                                   decoration-success="advance_payment_status in ['deposit_paid', 'full_paid']"/>
                        </group>
                        <group>
                            <button name="action_request_deposit" 
                                    type="object" 
                                    string="Payer Acompte" 
                                    class="oe_highlight"
                                    icon="fa-money"
                                    invisible="deposit_amount &lt;= 0 or deposit_paid &gt;= deposit_amount"/>
                            
                            <button name="action_register_advance_payment" 
                                    type="object" 
                                    string="Paiement Anticipé" 
                                    class="btn-secondary"
                                    icon="fa-credit-card"
                                    invisible="not allow_full_prepayment or amount_paid &gt;= total_amount"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Services" name="services">
                            <field name="service_line_ids">
                                <list editable="bottom">
                                    <field name="service_id"/>
                                    <field name="date"/>
                                    <field name="quantity"/>
                                    <field name="price_unit" widget="monetary"/>
                                    <field name="price_subtotal" widget="monetary" sum="Total"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Notes" name="notes">
                            <group>
                                <field name="notes" placeholder="Notes générales..."/>
                                <field name="special_requests" placeholder="Demandes spéciales du client..."/>
                            </group>
                        </page>
                        
                        <page string="Paiements Anticipés" 
                              name="advance_payments"
                              invisible="not require_deposit or not advance_payment_ids">
                            <field name="advance_payment_ids" readonly="1">
                                <list>
                                    <field name="date"/>
                                    <field name="amount" widget="monetary" sum="Total"/>
                                    <field name="hotel_payment_method_id"/>
                                    <field name="state" widget="badge"
                                           decoration-success="state == 'paid'"
                                           decoration-info="state == 'draft'"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Factures" name="invoices" invisible="not invoice_ids">
                            <field name="invoice_ids" readonly="1" context="{'res_model': 'account.move'}">
                                <list>
                                    <field name="name" optional="show" string="Numéro"/>
                                    <field name="invoice_date" optional="show"/>
                                    <field name="amount_total" widget="monetary" string="Montant"/>
                                    <field name="state" widget="badge" string="État"/>
                                    <field name="payment_state" widget="badge" string="Paiement"/>
                                </list>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="name" readonly="1"/>
                                                <field name="invoice_date" readonly="1"/>
                                                <field name="invoice_date_due" readonly="1"/>
                                            </group>
                                            <group>
                                                <field name="amount_total" widget="monetary" readonly="1"/>
                                                <field name="amount_residual" widget="monetary" readonly="1"/>
                                                <field name="state" widget="badge" readonly="1"/>
                                                <field name="payment_state" widget="badge" readonly="1"/>
                                            </group>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Vue Calendrier Réservations -->
    <record id="view_hotel_reservation_calendar" model="ir.ui.view">
        <field name="name">hotel.reservation.calendar</field>
        <field name="model">hotel.reservation</field>
        <field name="arch" type="xml">
            <calendar string="Réservations" date_start="checkin_date" date_stop="checkout_date"
                      color="room_id" mode="month" quick_create="0">
                <field name="partner_id"/>
                <field name="room_id"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Vue Recherche Réservations -->
    <record id="view_hotel_reservation_search" model="ir.ui.view">
        <field name="name">hotel.reservation.search</field>
        <field name="model">hotel.reservation</field>
        <field name="arch" type="xml">
            <search string="Réservations">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="room_id"/>
                <separator/>
                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmées" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Check-in" name="checkin" domain="[('state', '=', 'checkin')]"/>
                <filter string="Check-out" name="checkout" domain="[('state', '=', 'checkout')]"/>
                <separator/>
                <filter string="Aujourd'hui" name="today"
                        domain="[('checkin_date', '&lt;=', context_today().strftime('%Y-%m-%d')), ('checkout_date', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Cette Semaine" name="this_week"
                        domain="[('checkin_date', '&gt;=', (context_today() - relativedelta(weeks=0, weekday=0)).strftime('%Y-%m-%d')), ('checkin_date', '&lt;=', (context_today() + relativedelta(weeks=0, weekday=6)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter string="Non Payées" name="unpaid" domain="[('payment_status', '=', 'unpaid')]"/>
                <filter string="Partiellement Payées" name="partial" domain="[('payment_status', '=', 'partial')]"/>
                <filter string="Payées" name="paid" domain="[('payment_status', '=', 'paid')]"/>
                <separator/>
                <filter string="Avec Acompte" name="with_deposit" domain="[('require_deposit', '=', True)]"/>
                <filter string="Acompte Non Payé" name="deposit_unpaid" 
                        domain="[('require_deposit', '=', True), ('deposit_paid', '&lt;', 'deposit_amount')]"/>
                <group expand="0" string="Grouper Par">
                    <filter string="Client" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Chambre" name="group_room" context="{'group_by': 'room_id'}"/>
                    <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Date Arrivée" name="group_checkin" context="{'group_by': 'checkin_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action Réservations -->
    <record id="action_hotel_reservation" model="ir.actions.act_window">
        <field name="name">Réservations</field>
        <field name="res_model">hotel.reservation</field>
        <field name="view_mode">list,form,calendar</field>
        <field name="context">{'search_default_confirmed': 1, 'search_default_checkin': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle réservation
            </p>
            <p>
                Gérez les réservations de votre hôtel avec calcul automatique des tarifs.
            </p>
        </field>
    </record>

</odoo>