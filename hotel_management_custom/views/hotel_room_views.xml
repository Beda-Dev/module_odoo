<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vue Liste Chambres -->
    <record id="view_hotel_room_list" model="ir.ui.view">
        <field name="name">hotel.room.list</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <list string="Chambres" decoration-success="status == 'available'" 
                  decoration-info="status == 'reserved'" 
                  decoration-warning="status in ['cleaning', 'maintenance']"
                  decoration-danger="status == 'blocked'">
                <field name="name"/>
                <field name="room_type_id"/>
                <field name="floor"/>
                <field name="capacity"/>
                <field name="weekday_rate" widget="monetary"/>
                <field name="weekend_rate" widget="monetary"/>
                <field name="status" widget="badge"/>
                <field name="current_reservation_id" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Vue Formulaire Chambres -->
    <record id="view_hotel_room_form" model="ir.ui.view">
        <field name="name">hotel.room.form</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <form string="Chambre">
                <header>
                    <button name="action_set_available" string="Disponible" 
                            type="object" class="btn-success"
                            invisible="status == 'available'"/>
                    <button name="action_set_cleaning" string="À Nettoyer" 
                            type="object" class="btn-warning"
                            invisible="status == 'cleaning'"/>
                    <button name="action_set_maintenance" string="Maintenance" 
                            type="object" class="btn-danger"
                            invisible="status == 'maintenance'"/>
                    <field name="status" widget="statusbar" 
                           statusbar_visible="available,reserved,occupied,cleaning"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archivé" bg_color="text-bg-danger" invisible="active"/>
                    
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_reservations" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-calendar">
                            <field name="reservation_ids" widget="statinfo" string="Réservations"/>
                        </button>
                        <button name="action_view_housekeeping" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-broom">
                            <field name="housekeeping_ids" widget="statinfo" string="Nettoyages"/>
                        </button>
                    </div>
                    
                    <field name="color" widget="color_picker"/>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Ex: 101"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="room_type_id" options="{'no_create': True}"/>
                            <field name="floor"/>
                            <field name="capacity"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <label for="weekday_rate" string="Tarifs"/>
                            <div>
                                <field name="weekday_rate" widget="monetary" class="oe_inline"/>
                                <span class="oe_inline"> (Semaine)</span>
                            </div>
                            <div>
                                <field name="weekend_rate" widget="monetary" class="oe_inline"/>
                                <span class="oe_inline"> (Week-end)</span>
                            </div>
                        </group>
                    </group>
                    
                    <group string="Réservation Actuelle" invisible="not current_reservation_id">
                        <field name="current_reservation_id" readonly="1"/>
                    </group>
                    
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Description de la chambre..."/>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Notes internes..."/>
                        </page>
                        <page string="Maintenance" name="maintenance">
                            <group>
                                <field name="last_maintenance_date"/>
                                <field name="next_maintenance_date"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Vue Kanban Chambres -->
    <record id="view_hotel_room_kanban" model="ir.ui.view">
        <field name="name">hotel.room.kanban</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="status">
                <field name="color"/>
                <field name="status"/>
                <templates>
                    <t t-name="card">
                        <div t-attf-class="oe_kanban_color_#{kanban_color(record.color.raw_value)}">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <br/>
                                    <span class="text-muted">
                                        <field name="room_type_id"/>
                                    </span>
                                </div>
                                <span class="float-end badge" 
                                      t-attf-class="text-bg-#{record.status.raw_value === 'available' ? 'success' : (record.status.raw_value === 'occupied' ? 'danger' : 'warning')}">
                                    <field name="status"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <i class="fa fa-users"/> <field name="capacity"/> pers.
                                <br/>
                                <i class="fa fa-building"/> Étage <field name="floor"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="weekday_rate" widget="monetary"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Recherche Chambres -->
    <record id="view_hotel_room_search" model="ir.ui.view">
        <field name="name">hotel.room.search</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <search string="Chambres">
                <field name="name"/>
                <field name="room_type_id"/>
                <field name="floor"/>
                <separator/>
                <filter string="Disponibles" name="available" domain="[('status', '=', 'available')]"/>
                <filter string="Occupées" name="occupied" domain="[('status', '=', 'occupied')]"/>
                <filter string="Réservées" name="reserved" domain="[('status', '=', 'reserved')]"/>
                <filter string="À Nettoyer" name="cleaning" domain="[('status', '=', 'cleaning')]"/>
                <filter string="En Maintenance" name="maintenance" domain="[('status', '=', 'maintenance')]"/>
                <separator/>
                <filter string="Actives" name="active" domain="[('active', '=', True)]"/>
                <group expand="0" string="Grouper Par">
                    <filter string="Type" name="group_type" context="{'group_by': 'room_type_id'}"/>
                    <filter string="Statut" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Étage" name="group_floor" context="{'group_by': 'floor'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action Chambres -->
    <record id="action_hotel_room_all" model="ir.actions.act_window">
        <field name="name">Chambres</field>
        <field name="res_model">hotel.room</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle chambre
            </p>
            <p>
                Créez et gérez les chambres de votre hôtel.
            </p>
        </field>
    </record>

</odoo>
