<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue liste des templates -->
    <record id="view_lagunes_menu_template_tree" model="ir.ui.view">
        <field name="name">lagunes.menu.template.tree</field>
        <field name="model">lagunes.menu.template</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Templates de Menu" decoration-muted="not active">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="active" widget="boolean_toggle" optional="show"/>
            </list>
        </field>
    </record>
    
    <!-- Vue formulaire des templates -->
    <record id="view_lagunes_menu_template_form" model="ir.ui.view">
        <field name="name">lagunes.menu.template.form</field>
        <field name="model">lagunes.menu.template</field>
        <field name="arch" type="xml">
            <form string="Template de Menu">
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    <h1>
                        <field name="name" class="oe_inline" placeholder="Ex: Menu Lundi, Menu Végétarien"/>
                    </h1>
                    <group>
                        <group>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <field name="description" placeholder="Description du template..."/>
                    <separator string="Plats du template"/>
                    <field name="plat_ids" widget="many2many_tags"/>
                    <separator string="Notes"/>
                    <field name="notes" placeholder="Notes ou instructions..."/>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Vue recherche des templates -->
    <record id="view_lagunes_menu_template_search" model="ir.ui.view">
        <field name="name">lagunes.menu.template.search</field>
        <field name="model">lagunes.menu.template</field>
        <field name="arch" type="xml">
            <search string="Templates">
                <field name="name" string="Nom"/>
                <separator/>
                <filter name="filter_active" string="Actifs" domain="[('active', '=', True)]"/>
                <filter name="filter_inactive" string="Inactifs" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>
    
    <!-- Action pour voir les templates -->
    <record id="action_lagunes_menu_template" model="ir.actions.act_window">
        <field name="name">Templates de Menu</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">lagunes.menu.template</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre premier template de menu
            </p>
            <p>
                Les templates de menu permettent de partager les mêmes menus entre plusieurs entreprises.
            </p>
        </field>
    </record>

</odoo>
