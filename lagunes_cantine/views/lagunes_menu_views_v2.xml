<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire pour lagunes.menu - Version professionnelle -->
    <record id="view_lagunes_menu_form_v2" model="ir.ui.view">
        <field name="name">lagunes.menu.form</field>
        <field name="model">lagunes.menu</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Menu Cantine">
                <header>
                    <button name="action_view_commandes" type="object" 
                            string="Voir les commandes" class="oe_highlight"
                            invisible="commande_count == 0 or not id"/>
                    <button name="duplicate_menu" type="object" 
                            string="Dupliquer ce menu" class="btn-secondary"/>
                    <field name="active" invisible="1"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_commandes" type="object" 
                                class="oe_stat_button" icon="fa-shopping-cart"
                                invisible="commande_count == 0 or not id">
                            <field name="commande_count" widget="statinfo" 
                                   string="Commandes"/>
                        </button>
                    </div>
                    
                    <group>
                        <group string="Informations générales">
                            <field name="entreprise_id" options="{'no_create': True}"/>
                            <field name="date"/>
                            <field name="day_of_week" readonly="1"/>
                        </group>
                        <group string="Validité">
                            <field name="validity_type"/>
                            <field name="date_end" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="Template de menu (optionnel)">
                        <field name="is_template_based" widget="boolean"/>
                        <field name="template_id" options="{'no_create': True}" 
                               invisible="not is_template_based"/>
                    </group>
                    
                    <notebook>
                        <page string="Plats du menu">
                            <field name="plat_ids" widget="many2many_tags" 
                                   options="{'color_field': 'color'}">
                                <list>
                                    <field name="sequence" widget="handle"/>
                                    <field name="image_128" widget="image" width="50"/>
                                    <field name="name"/>
                                    <field name="category_id"/>
                                    <field name="prix_unitaire" widget="monetary"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes et instructions">
                            <field name="notes" placeholder="Notes ou instructions spéciales pour ce menu..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Vue liste pour lagunes.menu - Version professionnelle -->
    <record id="view_lagunes_menu_tree_v2" model="ir.ui.view">
        <field name="name">lagunes.menu.list</field>
        <field name="model">lagunes.menu</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Menus Cantine" 
                  decoration-success="active == True" 
                  decoration-muted="active == False">
                <field name="date"/>
                <field name="entreprise_id"/>
                <field name="validity_type" optional="show"/>
                <field name="date_end" optional="show"/>
                <field name="commande_count" sum="Total" optional="show"/>
                <field name="active" widget="boolean_toggle" optional="show"/>
            </list>
        </field>
    </record>
    
    <!-- Vue kanban pour lagunes.menu -->
    <record id="view_lagunes_menu_kanban" model="ir.ui.view">
        <field name="name">lagunes.menu.kanban</field>
        <field name="model">lagunes.menu</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="date"/>
                <field name="entreprise_id"/>
                <field name="commande_count"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="name"/></strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="entreprise_id"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge rounded-pill text-bg-info">
                                            <field name="commande_count"/> cmd
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <t t-if="record.active.raw_value">
                                            <span class="badge rounded-pill text-bg-success">Actif</span>
                                        </t>
                                        <t t-else="">
                                            <span class="badge rounded-pill text-bg-secondary">Inactif</span>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Vue recherche pour lagunes.menu -->
    <record id="view_lagunes_menu_search_v2" model="ir.ui.view">
        <field name="name">lagunes.menu.search</field>
        <field name="model">lagunes.menu</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Rechercher menus">
                <field name="date" string="Date"/>
                <field name="entreprise_id" string="Entreprise"/>
                <separator/>
                <filter name="filter_today" string="Aujourd'hui" 
                        domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_week" string="Cette semaine" 
                        domain="[('date', '>=', context_today().strftime('%Y-%m-%d')), ('date', '&lt;', (context_today() + relativedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_month" string="Ce mois" 
                        domain="[('date', '>=', context_today().strftime('%Y-%m-01')), ('date', '&lt;', (context_today() + relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                <separator/>
                <filter name="filter_active" string="Actifs" domain="[('active', '=', True)]"/>
                <filter name="filter_inactive" string="Inactifs" domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="1" string="Grouper par">
                    <filter name="group_by_entreprise" string="Entreprise" 
                            context="{'group_by': 'entreprise_id'}"/>
                    <filter name="group_by_date" string="Date" 
                            context="{'group_by': 'date'}"/>
                    <filter name="group_by_validity" string="Type de validité" 
                            context="{'group_by': 'validity_type'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action pour voir les menus -->
    <record id="action_lagunes_menu_v2" model="ir.actions.act_window">
        <field name="name">Menus Cantine</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">lagunes.menu</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_filter_today': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre premier menu
            </p>
            <p>
                Gérez les menus quotidiens pour vos entreprises clientes.<br/>
                Vous pouvez définir des validités journalières, hebdomadaires ou mensuelles.<br/>
                Utilisez des templates pour partager les menus entre entreprises.
            </p>
        </field>
    </record>

</odoo>
