<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vue formulaire pour lagunes.menu -->
    <record id="view_lagunes_menu_form" model="ir.ui.view">
        <field name="name">lagunes.menu.form</field>
        <field name="model">lagunes.menu</field>
        <field name="arch" type="xml">
            <form string="Menu Cantine">
                <header>
                    <button name="duplicate_menu" type="object" 
                            string="Dupliquer" class="btn-secondary"/>
                    <button name="toggle_active" type="object" 
                            string="Activer/Désactiver" class="btn-warning"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_commandes" type="object" 
                                class="oe_stat_button" icon="fa-shopping-cart" title="Commandes"
                                invisible="commande_count == 0 or not id">
                            <field name="commande_count" widget="statinfo" 
                                   string="Commandes"/>
                        </button>
                    </div>
                    
                    <div class="alert alert-info" role="alert" invisible="not active">
                        <i class="fa fa-info-circle" title="Information"/> <strong>Menu actif</strong> - 
                        Un seul menu actif par entreprise et par jour est autorisé.
                    </div>
                    
                    <group>
                        <group string="Informations générales">
                            <field name="entreprise_id" options="{'no_create': True}"/>
                            <field name="date" widget="date"/>
                            <field name="date_end" widget="date"/>
                            <field name="day_of_week" readonly="1"/>
                            <field name="menu_type" widget="radio"/>
                            <field name="active" widget="boolean"/>
                        </group>
                        <group string="Pack de menus" invisible="menu_type != 'pack'">
                            <field name="pack_id" options="{'no_create': True}" 
                                   domain="[('active', '=', True)]"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Plats du menu" invisible="menu_type == 'pack'">
                            <field name="plat_ids" widget="many2many_tags">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="image_128" widget="image" width="50"/>
                                    <field name="name"/>
                                    <field name="category_id"/>
                                    <field name="prix_unitaire" widget="monetary"/>
                                </list>
                            </field>
                        </page>
                        <page string="Plats du pack" invisible="menu_type != 'pack' or not pack_id">
                            <div class="alert alert-info" role="status">
                                <i class="fa fa-info-circle" title="Information"/> 
                                Les plats sont automatiquement chargés depuis le pack sélectionné.
                                <br/>
                                <strong>Pack:</strong> <field name="pack_id" readonly="1"/>
                            </div>
                            <field name="plat_ids" widget="many2many_tags" readonly="1">
                                <list>
                                    <field name="sequence" widget="handle"/>
                                    <field name="image_128" widget="image" width="50"/>
                                    <field name="name"/>
                                    <field name="category_id"/>
                                    <field name="prix_unitaire" widget="monetary"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes et instructions">
                            <field name="notes" placeholder="Notes ou instructions spéciales pour ce menu..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Vue liste pour lagunes.menu -->
    <record id="view_lagunes_menu_tree" model="ir.ui.view">
        <field name="name">lagunes.menu.list</field>
        <field name="model">lagunes.menu</field>
        <field name="arch" type="xml">
            <list string="Menus Cantine" 
                  decoration-success="active == True" 
                  decoration-muted="active == False"
                  create="1" edit="1" delete="1">
                <field name="date" widget="date"/>
                <field name="date_end" widget="date"/>
                <field name="day_of_week" optional="show"/>
                <field name="entreprise_id"/>
                <field name="menu_type" optional="show"/>
                <field name="pack_id" optional="hide"/>
                <field name="commande_count" sum="Total" optional="show"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>
    
    <!-- Vue kanban pour lagunes.menu -->
    <record id="view_lagunes_menu_kanban" model="ir.ui.view">
        <field name="name">lagunes.menu.kanban</field>
        <field name="model">lagunes.menu</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column" default_group_by="date">
                <field name="id"/>
                <field name="name"/>
                <field name="date"/>
                <field name="entreprise_id"/>
                <field name="commande_count"/>
                <field name="active"/>
                <field name="plat_ids"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                    <div class="o_kanban_record_headings">
                                        <span class="o_kanban_record_subtitle">
                                            <field name="entreprise_id"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body mt-2">
                                    <t t-if="record.plat_ids.raw_value.length > 0">
                                        <span class="badge rounded-pill text-bg-info">
                                            <i class="fa fa-cutlery" title="Plats"/> <t t-esc="record.plat_ids.raw_value.length"/> plats
                                        </span>
                                    </t>
                                </div>
                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge rounded-pill text-bg-primary">
                                            <i class="fa fa-shopping-cart" title="Commandes"/> <field name="commande_count"/> cmd
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <t t-if="record.active.raw_value">
                                            <span class="badge rounded-pill text-bg-success">✓ Actif</span>
                                        </t>
                                        <t t-else="">
                                            <span class="badge rounded-pill text-bg-secondary">Inactif</span>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Vue calendrier pour lagunes.menu -->
    <record id="view_lagunes_menu_calendar" model="ir.ui.view">
        <field name="name">lagunes.menu.calendar</field>
        <field name="model">lagunes.menu</field>
        <field name="arch" type="xml">
            <calendar string="Calendrier des menus" 
                      date_start="date"
                      date_stop="date_end"
                      color="entreprise_id" 
                      mode="month"
                      event_open_popup="true"
                      quick_create="0"
                      form_view_id="%(view_lagunes_menu_form)d">
                <field name="entreprise_id"/>
                <field name="commande_count"/>
                <field name="active"/>
            </calendar>
        </field>
    </record>
    
    <!-- Vue pivot pour analyses -->
    <record id="view_lagunes_menu_pivot" model="ir.ui.view">
        <field name="name">lagunes.menu.pivot</field>
        <field name="model">lagunes.menu</field>
        <field name="arch" type="xml">
            <pivot string="Analyse des menus">
                <field name="entreprise_id" type="row"/>
                <field name="date" interval="week" type="col"/>
                <field name="commande_count" type="measure"/>
            </pivot>
        </field>
    </record>
    
    <!-- Vue graphique -->
    <record id="view_lagunes_menu_graph" model="ir.ui.view">
        <field name="name">lagunes.menu.graph</field>
        <field name="model">lagunes.menu</field>
        <field name="arch" type="xml">
            <graph string="Statistiques des menus" type="line">
                <field name="date" interval="day"/>
                <field name="commande_count" type="measure"/>
            </graph>
        </field>
    </record>
    
    <!-- Vue recherche pour lagunes.menu -->
    <record id="view_lagunes_menu_search" model="ir.ui.view">
        <field name="name">lagunes.menu.search</field>
        <field name="model">lagunes.menu</field>
        <field name="arch" type="xml">
            <search string="Rechercher menus">
                <field name="date" string="Date" filter_domain="[('date', '=', self)]"/>
                <field name="entreprise_id" string="Entreprise"/>
                <field name="plat_ids" string="Plats"/>
                
                <!-- Filtres rapides -->
                <filter name="filter_today" string="Aujourd'hui" 
                        domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_tomorrow" string="Demain" 
                        domain="[('date', '=', (context_today() + relativedelta(days=1)).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter name="filter_this_week" string="Cette semaine" 
                        domain="[('date', '&gt;=', (context_today() - relativedelta(days=context_today().weekday())).strftime('%Y-%m-%d')),
                                ('date', '&lt;=', (context_today() + relativedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter name="filter_next_week" string="Semaine prochaine" 
                        domain="[('date', '&gt;=', (context_today() + relativedelta(days=7-context_today().weekday())).strftime('%Y-%m-%d')),
                                ('date', '&lt;=', (context_today() + relativedelta(days=13-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <separator/>
                <filter name="filter_this_month" string="Ce mois" 
                        domain="[('date', '&gt;=', context_today().strftime('%Y-%m-01')), 
                                ('date', '&lt;', (context_today() + relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
                <separator/>
                <filter name="filter_active" string="Actifs" domain="[('active', '=', True)]"/>
                <filter name="filter_inactive" string="Inactifs" domain="[('active', '=', False)]"/>
                <separator/>
                <filter name="filter_with_commands" string="Avec commandes" 
                        domain="[('commande_ids', '!=', False)]"/>
                <filter name="filter_no_commands" string="Sans commandes" 
                        domain="[('commande_ids', '=', False)]"/>
                <filter name="filter_pack_based" string="Basés sur pack" 
                        domain="[('is_pack_based', '=', True)]"/>
                
                <!-- Groupements -->
                <separator/>
                <group expand="1" string="Grouper par">
                    <filter name="group_by_entreprise" string="Entreprise" 
                            context="{'group_by': 'entreprise_id'}"/>
                    <filter name="group_by_date" string="Date" 
                            context="{'group_by': 'date:day'}"/>
                    <filter name="group_by_week" string="Semaine" 
                            context="{'group_by': 'date:week'}"/>
                    <filter name="group_by_month" string="Mois" 
                            context="{'group_by': 'date:month'}"/>
                    <filter name="group_by_day_of_week" string="Jour de la semaine" 
                            context="{'group_by': 'day_of_week'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Action pour voir les menus -->
    <record id="action_lagunes_menu" model="ir.actions.act_window">
        <field name="name">Menus Quotidiens</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">lagunes.menu</field>
        <field name="view_mode">kanban,calendar,list,form,pivot,graph</field>
        <field name="context">{'search_default_filter_today': 1, 'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre premier menu
            </p>
            <p>
                Gérez les menus quotidiens pour vos entreprises clientes.<br/>
                <ul>
                    <li><strong>Un seul menu actif</strong> par entreprise et par jour</li>
                    <li>Utilisez des <strong>packs</strong> pour créer rapidement des menus</li>
                    <li>Visualisez les commandes directement depuis le menu</li>
                    <li>Utilisez le calendrier pour une vue d'ensemble</li>
                </ul>
            </p>
        </field>
    </record>

</odoo>