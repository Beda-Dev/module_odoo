<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Template : Confirmation de commande -->
    <template id="commande_confirmation" name="Confirmation de commande">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure">
                <div class="container mt-5 mb-5">
                    <div class="row">
                        <div class="col-lg-6 offset-lg-3">
                            <div class="card shadow">
                                <div class="card-header bg-success text-white text-center">
                                    <h3 class="mb-0">
                                        <i class="fa fa-check-circle"/> Commande confirmée !
                                    </h3>
                                </div>
                                <div class="card-body p-4">
                                    <div class="text-center mb-4">
                                        <h4>Référence : <span class="text-primary" t-esc="commande.reference"/></h4>
                                    </div>
                                    
                                    <div class="border-top border-bottom py-3 mb-3">
                                        <div class="row mb-2">
                                            <div class="col-6 text-muted">Entreprise:</div>
                                            <div class="col-6 text-end">
                                                <strong t-esc="commande.entreprise_id.name"/>
                                            </div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-6 text-muted">Employé:</div>
                                            <div class="col-6 text-end">
                                                <strong t-esc="commande.employee_name"/>
                                            </div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-6 text-muted">Date:</div>
                                            <div class="col-6 text-end">
                                                <strong t-esc="commande.date.strftime('%d/%m/%Y')"/>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <h5 class="mb-3">Détails de la commande</h5>
                                    
                                    <div class="card bg-light mb-3">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <div>
                                                    <h5 class="mb-1" t-esc="commande.plat_id.name"/>
                                                    <div class="text-muted">
                                                        Quantité: <t t-esc="commande.quantity"/>
                                                    </div>
                                                </div>
                                                <strong class="text-primary">
                                                    <t t-esc="commande.prix_total"/> FCFA
                                                </strong>
                                            </div>
                                            
                                            <t t-if="commande.option_sans_sel or commande.option_piment_apart">
                                                <div class="mt-2">
                                                    <small class="text-muted">Options:</small><br/>
                                                    <span class="badge rounded-pill text-bg-warning me-1" t-if="commande.option_sans_sel">
                                                        Sans sel
                                                    </span>
                                                    <span class="badge rounded-pill text-bg-danger" t-if="commande.option_piment_apart">
                                                        Piment à part
                                                    </span>
                                                </div>
                                            </t>
                                            
                                            <t t-if="commande.notes">
                                                <div class="mt-2">
                                                    <small class="text-muted">Notes:</small><br/>
                                                    <small t-esc="commande.notes"/>
                                                </div>
                                            </t>
                                        </div>
                                    </div>
                                    
                                    <div class="alert alert-info">
                                        <i class="fa fa-info-circle"/> Votre commande a été transmise à la cuisine. 
                                        Elle sera prête à l'heure du déjeuner.
                                    </div>
                                    
                                    <div class="d-grid gap-2">
                                        <a t-attf-href="/cantine/menu/#{commande.entreprise_id.id}" 
                                           class="btn btn-primary">
                                            <i class="fa fa-arrow-left"/> Retour au menu
                                        </a>
                                        <a href="/cantine/mes_commandes" class="btn btn-outline-secondary">
                                            <i class="fa fa-list"/> Voir mes commandes
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    
    <!-- Template : Historique des commandes -->
    <template id="mes_commandes" name="Mes commandes">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure">
                <div class="container mt-4 mb-5">
                    <div class="row mb-4">
                        <div class="col-12">
                            <h2>
                                <i class="fa fa-list"/> Mes commandes
                            </h2>
                            <p class="text-muted">Historique de vos commandes, <t t-esc="employee_name"/></p>
                        </div>
                    </div>
                    
                    <t t-if="commandes">
                        <div class="row">
                            <t t-foreach="commandes" t-as="commande">
                                <div class="col-lg-6 mb-4">
                                    <div class="card h-100">
                                        <div class="card-header d-flex justify-content-between align-items-center">
                                            <span>
                                                <strong t-esc="commande.reference"/>
                                            </span>
                                            <t t-if="commande.state == 'confirmed'">
                                                <span class="badge rounded-pill text-bg-info">Confirmée</span>
                                            </t>
                                            <t t-elif="commande.state == 'preparing'">
                                                <span class="badge rounded-pill text-bg-warning">En préparation</span>
                                            </t>
                                            <t t-elif="commande.state == 'ready'">
                                                <span class="badge rounded-pill text-bg-primary">Prêt</span>
                                            </t>
                                            <t t-elif="commande.state == 'delivered'">
                                                <span class="badge rounded-pill text-bg-success">Livré</span>
                                            </t>
                                            <t t-else="">
                                                <span class="badge rounded-pill text-bg-secondary" t-esc="commande.state"/>
                                            </t>
                                        </div>
                                        <div class="card-body">
                                            <div class="mb-2">
                                                <small class="text-muted">
                                                    <i class="fa fa-calendar"/> 
                                                    <t t-esc="commande.date.strftime('%d/%m/%Y')"/>
                                                </small>
                                            </div>
                                            <h5 t-esc="commande.plat_id.name"/>
                                            <div class="text-muted mb-2">
                                                Quantité: <t t-esc="commande.quantity"/>
                                            </div>
                                            <t t-if="commande.option_sans_sel or commande.option_piment_apart">
                                                <div class="mb-2">
                                                    <span class="badge rounded-pill text-bg-warning me-1" t-if="commande.option_sans_sel">
                                                        Sans sel
                                                    </span>
                                                    <span class="badge rounded-pill text-bg-danger" t-if="commande.option_piment_apart">
                                                        Piment à part
                                                    </span>
                                                </div>
                                            </t>
                                            <div class="mt-3">
                                                <strong class="text-primary">
                                                    <t t-esc="commande.prix_total"/> FCFA
                                                </strong>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </t>
                    <t t-else="">
                        <div class="row">
                            <div class="col-lg-6 offset-lg-3">
                                <div class="alert alert-info text-center">
                                    <i class="fa fa-inbox fa-3x mb-3"/>
                                    <h4>Aucune commande</h4>
                                    <p>Vous n'avez pas encore passé de commande.</p>
                                </div>
                            </div>
                        </div>
                    </t>
                    
                    <div class="row mt-4">
                        <div class="col-12 text-center">
                            <a href="/cantine" class="btn btn-outline-primary">
                                <i class="fa fa-arrow-left"/> Retour à l'accueil
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>
